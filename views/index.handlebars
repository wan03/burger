<h1>Bob's Burgers</h1>

<div class="box">
<h2>Burgers that can be eaten</h2>

<ul>
  {{#each burger}}{{#unless devoured}}
  <li>{{burger_name}}
    <button class="devour" data-id="{{id}}" >
      Eat this burger!
    </button>

	<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
  </li>
    {{/unless}}{{/each}}
</ul>
</div>

<div class="box">
<h2>You have eaten these burgers!</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
    <li>{{burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>
</div>

<div class="box">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bur">Burger Name:</label>
    <input type="text" id="bur" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>